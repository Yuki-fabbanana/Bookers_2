<h2>User info</h2>
<div class="error_expansion">
    <% @user.errors.full_messages.each do |message| %>
        <li style="color: red;">error <%= message %></li>
    <% end %>
</div>
<div class="form-body">
  <%= form_for(@user) do |f| %>
    <h4>Name</h4>
    <%= f.text_field :name %>

    <h4>Image</h4>
    <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>

    <h4>Introduction</h4>
    <%= f.text_area :introduction %><br>
    <%= f.submit "Update User", class: "btn btn-default"  %>
    <% end %>
</div>