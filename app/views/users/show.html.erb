<!-- sidebar -->
<div class="row">
  <div class="col-lg-3">
    <h2>User info</h2>
<div class="sidebar">
  <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: 'no_image.jpg' %>
  <table class="table">
    <tbody>
      <tr>
        <th>name</th>
        <th><%= @user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= @user.introduction %></th>
      </tr>
    </tbody>
  </table>
  <div class="row">
      <%= link_to edit_user_path(@user), class: "btn btn-default col-xs-12" do %>
      <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
      <% end %>
  </div>

  <h2>New book</h2>
  <%= form_for (@book) do |f| %>
    <div class="row">
      <h4>Title</h4>
      <%= f.text_field :title, class: "col-xs-12" %>
    </div>
    <div class="row">
      <h4>Opinion</h4>
      <%= f.text_area :body, class: "col-xs-12"%>
    </div>
    <br>
    <div class="row">
      <%= f.submit 'Create Book', class: "btn btn-primary col-xs-12" %>
    </div>
  <% end %>
</div>
  </div>
<!-- sidebar -->
  <div class="col-lg-9">
    <h2>Books</h2>
    <table class="table">
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
        <% @books.each do |book| %>
          <tr>
            <td>
              <%= attachment_image_tag @user, :profile_image, format: 'jpeg', fallback: 'no_image.jpg', size: "40x40" %>
            </td>
            <td>
              <%= link_to book_path(book.id) do %>
                <%= book.title %>
              <% end %>
            </td>
            <td>
              <%= book.body %>
            </td>
          </tr>
        <% end %>
      </thead>
    </table>
  </div>
</div>
