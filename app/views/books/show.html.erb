<!-- sidebar -->
<div class="row">
  <div class="col-lg-3">
    <h2>User info</h2>
<div class="sidebar">
  <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: 'no_image.jpg' %>
  <table class="table">
    <tbody>
      <tr>
        <th>name</th>
        <th><%= @user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= @user.introduction %></th>
      </tr>
    </tbody>
  </table>
  <div class="row">
      <%= link_to edit_user_path(@user), class: "btn btn-default col-xs-12" do %>
      <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
      <% end %>
  </div>


  <div class="col-lg-9">
    <h2>Book detail</h2>
    <table class="table">
      <tbody>
        <tr>
          <td>
            <%= link_to user_path(@book_select.user) do %>
            <%= attachment_image_tag @book_select.user, :profile_image, format: 'jpeg', fallback: 'no_image.jpg', size: "40x40" %><br>
            <%= @book_select.user.name %>
            <% end %>
          </td>
          <td>
            <%= link_to book_path(@book_select.id) do %>
              <%= @book_select.title %>
            <% end %>
          </td>
          <td>
            <%= @book_select.body %>
          </td>
          <% if @book_select.user_id == current_user.id %>
            <td>
              <%= link_to edit_book_path(@book_select), class: " btn-sm btn btn-success" do %>
                Edit
              <% end %>
            </td>
            <td>
              <%= link_to book_path(@book_select), class: "btn-sm btn btn-danger", method: :delete do %>
                Destroy
              <% end %>
            </td>
          <% end %>
        </tr>
      </tbody>
    </table>
  </div>
</div>
